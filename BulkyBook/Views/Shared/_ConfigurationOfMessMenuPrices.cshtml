@model MessMenuPrices
<form asp-controller="Configuration" asp-action="ConfigureMessMenuPrices" method="post">
<div class="card">
    <div class="card-header">
    <h4 class="card-title" >Review Mess Menu Prices</h4>
    </div>
    <div class="card-body">
       <div class="form-check">
           <input class="form-check-input" type="checkbox" asp-for="FixedPrices"/>
           <label class="form-check-lable" asp-for="FixedPrices"></label>
       </div>
       <div class="form-check">
           <input class="form-check-input" type="checkbox"asp-for="SetIndividualPrices"/>
           <label class="form-check-lable" asp-for="SetIndividualPrices"></label>
       </div>
       <div class="form-group">
           <select class="form-control" asp-for="IndividualPrices" asp-items="Html.GetEnumSelectList<IndividualPrices>()"></select>
       </div>
    </div>
    <div class="card-footer">
    <button type="submit" class="btn btn-primary">OK</button>
    </div>
</form>
