@model EditRoleViewModel;
@{
    ViewBag.Title = "Edit Role";
}
<form method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
        </div>
        <div class="form-group row">
            <label asp-for="RoleName" class="col-sm-2"></label>
            <div class="col-sm-2">
                <input asp-for="RoleName" class="form-control" />
                <span class="text-danger" asp-validation-for="RoleName"></span>
            </div>
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Edit</button>
                <a asp-action="ListOfRoles" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    <div class="card">
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
           @if(Model.users.Any())
            {
                foreach (var user in Model.users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">Nont at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Administeration" asp-action="EditUsersInRole" asp-route-id="@Model.Id" class="btn btn-primary" style="width:auto">Add OR Remove Users</a>
            
        </div>
    </div>
</form>
