@model IEnumerable<Attendance>
@{
}

<br /><br /><br /><br /><br /><br />
    <section class="section center-section">
        <div class="row">
            <div class="col-lg-1"></div>
            <div class="col-lg-5"><img src="/assets/img/Attendance.png" width="750" height="750"></div>
            <div class="col-lg-6">
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Attendance List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Attendance" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Attendance
            </a>
        </div>
    </div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Breakfast
            </th>
            <th>
                Lunch
            </th>
            <th>
                Dinner
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
       {
           <tr>
               <td>
                   @obj.Name
               </td>
               <td>
                   @obj.BreakFast
               </td>
               <td>
                   @obj.Lunch
               </td>
               <td>
                   @obj.Dinner
               </td>
               
               <td>
                   <div class="w-75 btn-group" role="group">
                       <a asp-controller="Attendance" asp-action="Edit" asp-route-id="@obj.Id"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                       <a asp-controller="Attendance" asp-action="Delete" asp-route-id="@obj.Id"
                       class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                   </div>
               </td>
           </tr>
       }
    </tbody>
    <tfoot>
        <tr>
            <td></td>
            <td>
               <b> @Model.AsEnumerable().Where(o=>o.BreakFast==BreakFast.Yes).Select(o=>o).Count()</b>
            </td>
            <td>
             <b>  @Model.AsEnumerable().Where(o=>o.Lunch==Lunch.Yes).Select(o=>o).Count()</b>
            </td>
            <td>
              <b> @Model.AsEnumerable().Where(o=>o.Dinner==Dinner.Yes).Select(o=>o).Count()</b>
            </td>
        </tr>
    </tfoot>
</table>
<div>
    <h2>No Of Hostelite:@Model.Count()</h2>
    
</div>
</div></div></div></section>