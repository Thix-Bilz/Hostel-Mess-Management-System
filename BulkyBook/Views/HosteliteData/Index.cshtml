    @model IEnumerable<HosteliteData>
@{
    ViewData["Title"] = "Index";
}

<br /><br /><br /><br />
<section class="section center-section">
      <div class="row">
    <div class="col-lg-5"><img src="/assets/img/HosteliteData.png" width="750" height="600"></div>
    
    <div class="col-lg-5">
        <br /><br />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Hostelite Data</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="HosteliteData" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Data
            </a>
        </div>
    </div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Full Name
            </th>
            <th>
                Room Number
            </th>
            <th>
                Email Address
            </th>
            <th>
                Phone
            </th>
            <th>
                Department
            </th>
            <th>
                City
            </th>
            <th>
                Password
            </th>
            <th>
                Edit & Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
       {
           <tr>
               <td>
                   @obj.Name
               </td>
               <td>
                   @obj.RoomNumber
               </td>
               <td>
                   @obj.User.Email
               </td>
               <td>
                   @obj.User.PhoneNumber
               </td>
               <td>
                   @obj.Department
               </td>
               <td>
                   @obj.City
               </td>
               <td>

               </td>
               <td>
                   <div class="w-75 btn-group" role="group">
                       <a asp-controller="HosteliteData" asp-action="Edit" asp-route-id="@obj.Id"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                       <a asp-controller="HosteliteData" asp-action="Delete" asp-route-id="@obj.Id"
                       class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i></a>
                   </div>
               </td>
           </tr>
       }
    </tbody>
</table>
</div></div></div>
</section>