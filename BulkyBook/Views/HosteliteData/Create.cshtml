@model HosteliteData
@inject UserManager<IdentityUser> _userManager;
@{
   
    List<SelectListItem> selectListItems = new List<SelectListItem>();
    selectListItems.AddRange(_userManager.Users.Select(u=>new SelectListItem() { Text = u.UserName, Value = u.Email }).ToList());

}
<form method="post">
    <br /><br /><br /><br />
        <section class="section center-section">
        <div class="row">
            <div class="col-lg-1"></div>
            <div class="col-lg-5"><img src="/assets/img/HosteliteData.png" width="750" height="750"></div>
            <div class="col-lg-6">
    <div class="border p-3 mt-4 w-75">
        <div class="row pb-2">
            <h2 class="text-primary">Create Hostelite Data</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
           <label class="form-label">Email</label>
           <select asp-for="User.Email" asp-items="selectListItems"></select>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="RoomNumber"></label>
            <input asp-for="RoomNumber" class="form-control"/>
            <span asp-validation-for="RoomNumber" class="text-danger"></span>
        </div>
        
        
        
        <div class="mb-3">
            <label asp-for="@Model.User.PhoneNumber"></label>
            <input asp-for="@Model.User.PhoneNumber" class="form-control"/>
            <span asp-validation-for="@Model.User.PhoneNumber" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="Department"></label>
            <input asp-for="Department" class="form-control"/>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control"/>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        @*<div class="mb-3">
            <label asp-for="userid"></label>
            <input asp-for="userid" class="form-control"/>
            <span asp-validation-for="userid" class="text-danger"></span>
        </div>*@

        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="HosteliteData" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
    </div>
    </div></div></section>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
