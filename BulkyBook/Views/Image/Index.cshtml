@model IEnumerable<BulkyBookWeb.Models.ImageModel>

@{
    ViewData["Title"] = "Index";
}
<br /><br /><br />
<div class="container p-5">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Menu List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Image" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Category
            </a>
        </div>
    </div>
    <br /><br />


<table class="table table-bordered text-center table-striped" style=" width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Image
            </th>
            <th>
                Edit | Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
       {
           <tr>
               <td width="10%">
                   @obj.Title
               </td>
               <td width="10%">
                   @obj.ImageName
               </td>
               <td width="10%">
                   <div class="w-75 btn-group" role="group">
                       <a asp-controller="Image" asp-action="Edit" asp-route-id="@obj.ImageId"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>&nbsp; Edit</a>
                       <a asp-controller="Image" asp-action="Delete" asp-route-id="@obj.ImageId"
                       class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>&nbsp; Delete</a>
                   </div>
               </td>
           </tr>
       }
    </tbody>
</table>
</div>